<strong>Name:</strong> <%= @attraction.name %><br>
<strong>Total Number of Users:</strong> <%= @attraction.users.count %><br>
<strong>Ticket Requirement:</strong> <%= @attraction.tickets %><br>
<strong>Height Requirement:</strong> <%= @attraction.min_height %><br>

<% if current_user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %> 
  <%= form_tag ride_path, method: "post" do %>
    <%= hidden_field_tag "ride[attraction_id]", @attraction.id %>
    <%= hidden_field_tag "ride[user_id]", session[:user_id] %>
    <%= submit_tag "Go on this ride" %>
  <% end %>
<% end %>